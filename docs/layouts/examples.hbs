<!doctype html>
<html>
<head>
  {{> default-header}}
</head>
<body>

{{> nav}}

<main class="body">

  <div class="container">
    <h2 class="guide-section-header">Pages</h2>

    {{#grouped 3 collections.examples}}
    <div class="container-md-height">
      <div class="row row-md-height">
        {{#each this }}
          <div class="col-md-3 col-md-height">
            <div class="card">
              <div class="card-block text-center">
                {{#if this.title}}
                  <span class="app-icon app-icon-lg app-icon-{{{this.icon}}}">{{this.shortName}}</span>
                  <h3>{{{this.title}}}</h3>
                  <p>
                    <a class="btn btn-default" href="{{this.path}}">View</a>
                  </p>

                {{else}}
                  <strong>** Missing YAML Front Matter Title Attribute **</strong>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    {{/grouped}}
  </div>

</main>

{{> default-footer}}

</body>
</html>
